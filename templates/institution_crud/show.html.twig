{% extends 'base.html.twig' %}

{% block title %}Institution{% endblock %}

{% block body %}
    <h1>Institution</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ institution.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ institution.name }}</td>
            </tr>
            <tr>
                <th>BeginDate</th>
                <td>{{ institution.beginDate ? institution.beginDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ institution.endDate ? institution.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ institution.type }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ institution.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_institution_crud_index') }}">back to list</a>

    <a href="{{ path('app_institution_crud_edit', {'id': institution.id}) }}">edit</a>

    {{ include('institution_crud/_delete_form.html.twig') }}
{% endblock %}
